	"item": [
		{
			"name": "Create Short URL",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let resp = pm.response.json();",
							"if (resp.shortKey) {",
							"    pm.collectionVariables.set(\"shortKey\", resp.shortKey);",
							"    console.log(\"shortKey atualizado:\", resp.shortKey);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"url\": \"https://globo.com\",\n  \"expiresAt\": null\n}"
				},
				"url": "{{baseUrl}}/api/urls"
			},
			"response": []
		},
		{
			"name": "Get URL Info",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{baseUrl}}/api/urls/{{shortKey}}"
			},
			"response": []
		},
		{
			"name": "Delete URL",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": "{{baseUrl}}/api/urls/{{shortKey}}"
			},
			"response": []
		},
		{
			"name": "Redirect to Original",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{baseUrl}}/{{shortKey}}"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:30694"
		},
		{
			"key": "shortKey",
			"value": "abc123"
		}
	]
